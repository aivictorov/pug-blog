mixin post(title, info, img, link)
    article.post
        h2.post__title #{title}
        .post__info #{info}
        .post__image
            img(src="./img/posts-preview/" + img, alt= title)
        .post__content 
            block
        .post__footer 
            .post__read-more 
                +button-read-more('Read more', link)
            .post__share-icons 
                include ./../sections/share-icons.pug
